{

  "manifest_version": 2,
  "name": "SelectionGPT",
  "description": "ignored",
  "version": "1.0",
  "default_locale": "en",

  "browser_specific_settings": {
    "gecko": {
      "id": "selection_gpt@x3rdev.com"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "SelectionGPT",
    "default_icon": {
      "48": "icons/page-48.png"
    },
    "default_popup": "options.html"
  },
  
  "permissions": [
    "contextMenus",
    "menus",
    "activeTab",
    "storage"
  ],
  
  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_icon": "icons/page-48.png",
    "open_at_install": false
  }
}
